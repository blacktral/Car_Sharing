<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ua.dnu.ffeks.prokhodetskv.carsharing.car_sharing.controllers.AdminController">

    <top>
        <HBox spacing="15.0" alignment="CENTER_LEFT">
            <padding> <Insets top="15" right="15" bottom="15" left="15"/> </padding>
            <Label text="Оберіть таблицю:" style="-fx-font-weight: bold;"/>
            <ComboBox fx:id="tablesComboBox" prefWidth="250.0"/>
            <Button text="Оновити" onAction="#handleViewTable"/>
        </HBox>
    </top>

    <center>
        <TableView fx:id="mainTableView"/>
    </center>

    <bottom>
        <HBox spacing="20.0" alignment="CENTER">
            <padding> <Insets top="15" right="15" bottom="15" left="15"/> </padding>

            <Button text="Додати запис" onAction="#handleAddRecord"
                    style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold;"/>

            <Button text="Редагувати обране" onAction="#handleEditRecord"
                    style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-font-weight: bold;"/>

            <Button text="Видалити обране" onAction="#handleDeleteRecord"
                    style="-fx-background-color: #F44336; -fx-text-fill: white; -fx-font-weight: bold;"/>
        </HBox>
    </bottom>

</BorderPane>